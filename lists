# ->Remove empty strings from the list of strings @ method--1
'''a=[' ','berry','grapes','rasgulla','dilkush',' ','  ']
print(a.pop(0))
print(a.pop(5))
print(a.pop(-1))
print(a)'''

# method ---2
'''a=[' ','berry','grapes','rasgulla','dilkush',' ','  ']
while ' ' in a :
    a.remove(' ')
print(a)'''

#method --3
a=[' ','berry','grapes','rasgulla','dilkush',' ','  ']
a=' '.join(a)
print(a)

#->Iterate both lists simultaneously
'''sum=[1,2,3]
sub=[5,6,7]
for (a,b) in zip(sum,sub):
    print(a,b)'''


#->Concatenate two lists in the given order

'''a=[1,2,3,4]
b=[5,6,7,8]
c=a+b
print(c)'''
'''
a = ['1','2','3','4']
